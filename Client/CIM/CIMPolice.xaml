<Window x:Class="Client.CIM.CIMPolice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:Controls="clr-namespace:Controls;assembly=Controls"
        Title="报警信息" Height="320" Width="480" WindowStyle="None" ResizeMode="NoResize" Foreground="Black" BorderThickness="1" BorderBrush="#FF0F7978" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" ShowInTaskbar="False">
    <DockPanel>
        <Grid VerticalAlignment="Top" DockPanel.Dock="Top">
            <DockPanel Height="25" LastChildFill="False" Margin="0" VerticalAlignment="Top" Background="#FF00ADB8" DockPanel.Dock="Top" MouseDown="DockPanel_MouseDown">
                <TextBlock Text="报警信息" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="White" />
            </DockPanel>
            <Controls:WindowClose Margin="0" VerticalAlignment="Top" Foreground="#FF4B4C4C" Width="25" HorizontalContentAlignment="Right" HorizontalAlignment="Right" Height="25" DockPanel.Dock="Right"/>
        </Grid>
        <ScrollViewer Template="{DynamicResource scroll}" Padding="10">
            <StackPanel x:Name="polices">
                
            </StackPanel>
        </ScrollViewer>

    </DockPanel>
</Window>
